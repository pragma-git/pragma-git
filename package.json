{
  "version": "0.0.0",
  "name": "Pragma-git",
  "description": "The pragmatic git client",
  "main": "app.html",
  "author": "Jan Axelsson",
  "license": "MIT",
  "chromium-args": "--disable-gpu",
  "window": {
    "show": false,
    "toolbar": false,
    "frame": false,
    "position": "center",
    "width": 775,
    "height": 148,
    "min_width": 775,
    "min_height": 148,
    "icon": "./images/icon.png"
  },
  "scripts": {
    "start": "/Applications/nwjs.app/Contents/MacOS/nwjs ."
  },
  "dependencies": {
    "@toast-ui/editor": "^2.3.1",
    "chokidar": "^3.4.2",
    "codemirror": "^5.57.0",
    "diff-match-patch": "^1.0.5",
    "findinnw": "^1.1.3",
    "is-unc-path": "^1.0.0",
    "mime-types": "^2.1.27",
    "node-fetch": "^2.6.1",
    "simple-git": "^2.11.0",
    "terminal-tab": "^0.0.7",
    "windows-network-drive": "^3.0.1"
  },
  "build": {
    "nwFlavor": "sdk",
    "nwVersion": "v0.53.0",
    "mac": {
      "displayName": "Pragma-git",
      "copyright": "copyright",
      "icon": "./images/icon.icns",
      "plistStrings": {
        "CFBundleIdentifier": "io.github.JanAxelsson.pragmagit",
        "CFBundleDocumentTypes": []
      }
    },
    "win": {
      "productName": "Pragma-git",
      "companyName": "Jan Axelsson",
      "copyright": "copyright",
      "icon": "./images/icon.ico"
    },
    "nsis": {
      "installDirectory": "$PROGRAMFILES\\${_COMPANYNAME}\\${_APPNAME}",
      "diffUpdaters": true
    }
  },
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.15.0"
  }
}
