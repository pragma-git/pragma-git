{
  "name": "Pragma-merge",
  "description": "Chrome platform app.",
  "version": "0.4.1",
  "main": "pragma-merge.html",
  "author": "Jan Axelsson",
  "license": "MIT",
  "window": {
    "id": "pragma-merge-window-id",
    "position": "center",
    "width": 700,
    "height": 540,
    "min_width": 350,
    "min_height": 140,
    "icon": "../images/icon.png"
  },
  "dependencies": {
    "codemirror": "^5.57.0",
    "diff-match-patch": "^1.0.5",
    "mime-types": "^2.1.27"
  },
  "build": {
    "nwFlavor": "sdk",
    "nwVersion": "v0.47.2",
    "mac": {
      "displayName": "Pragma-merge",
      "copyright": "copyright",
      "icon": "../images/icon.icns",
      "plistStrings": {
        "CFBundleIdentifier": "io.github.JanAxelsson.pragmagit",
        "CFBundleDocumentTypes": []
      }
    },
    "win": {
      "productName": "Pragma-merge",
      "companyName": "Jan Axelsson",
      "copyright": "copyright",
      "icon": "../images/icon.ico"
    },
    "nsis": {
      "installDirectory": "$PROGRAMFILES\\${_COMPANYNAME}\\${_APPNAME}",
      "diffUpdaters": true
    }
  },
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.15.0"
  }
}
